<!--ユーザー一覧-->
 <div class="container px-5 px-sm-0">
　<div class="row">
 
 
 <div class="col-md-3"> 
    <!--ユーザーインフォ-->
    <%= render 'books/info', user: @user %>
    <!--New book-->
    <%= render 'books/new', book: @book %>
 </div>  
 
   <div class="col-md-8 offset-md-1">
   <!--Usersの部分　ここから-->
  <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">image</th>
          <th scope="col">name</th>
          <th colspan="3"></th>
          <th></th>
        </tr>
      </thead>
      
      <% @users.each do |user| %>
        <tbody>
            <thead>
              <tr>
                <th scope="col"><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "40x40" %></th>
                <td><%= user.name %></td>
                <td colspan="3"></td>
                <td><%= link_to "Show",user_path(user.id) %></td>
                <td></td>
              </tr>
            </thead>
        </tbody>
      <% end %>
    </table>
  </div>
  
  </div>
  </div>