<!--コメント欄、コメント入力欄ここから-->
<tbody id="book_<%= book.id %>">
 <!--この本に対して入力されたコメントを抽出することを繰り返す-->
 <% book.book_comments.each do|book_comment| %>
  <tr>
   
    <th scope="col"></th>
    <!--読み込むeachの文-->
    <th scope="col">
     <!--ユーザーページに飛ばす画像と名前のところ両方とも-->
     <p>
      <%= link_to user_path(book_comment.user.id) do %>
       <%= attachment_image_tag book_comment.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %>
      <% end %>
     </p>
     <!--ユーザーページに飛ばす画像と名前のところ両方とも-->
     <p><%= link_to book_comment.user.name,user_path(book_comment.user.id) %></p>
    </th>
    <!--コメント-->
    <th scope="col">
     <%= book_comment.user_comment %>
    </th>
       
     <% if current_user == book_comment.user %>
      <th scope="col">
       <%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, remote:true, class:"btn btn-sm btn-danger" %>
      </th>
      <th></th>
     <% end %>
<% end %>
 </tr>
 <!--読み込むeachの文のend-->
    
    
 <!--bookに対するコメント-->
 <tr>
  <th scope="col">
   <%#= form_with(model:[book,book_comment], local:true) do |f| %>
   <%= form_with(model:[book,book_comment], remote:true) do |f| %>
     <%= f.text_area :user_comment %>
      <%= f.submit '送信' %>
   <% end %>
  </th> 
 </tr>
</tbody>
<!--コメント欄、コメント入力欄ここまで-->